<section id="contacto" style="padding: 60px 20px;">
  <h2 data-aos="fade-up" style="color: #fff; text-align: center;">Contacto</h2>
  <form action="" method="POST" data-aos="fade-up" style="max-width: 600px; margin: 40px auto 0; display: flex; flex-direction: column; gap: 15px;">
    <input type="text" name="name" placeholder="Tu nombre" required style="padding: 10px; background-color: #111; border: 1px solid #333; color: #fff;" />
    <input type="email" name="email" placeholder="Tu correo" required style="padding: 10px; background-color: #111; border: 1px solid #333; color: #fff;" />
    <textarea name="message" placeholder="Tu mensaje" rows="5" required style="padding: 10px; background-color: #111; border: 1px solid #333; color: #fff;"></textarea>
    <button type="submit" style="padding: 15px 30px; background-color: #fff; color: #000; font-weight: bold; border: none; cursor: pointer;">Enviar mensaje</button>
  </form>
</section>
