---
const images = [
  { src: "/tattoo1.jpg", alt: "Tatuaje 1" },
  { src: "/tattoo2.jpg", alt: "Tatuaje 2" },
  { src: "/tattoo3.jpg", alt: "Tatuaje 3" },
  { src: "/tattoo4.jpg", alt: "Tatuaje 4" },
];
---

<section id="galeria" style="padding: 60px 20px;">
  <h2 data-aos="fade-up" style="color: #fff; text-align: center;">Galer√≠a</h2>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-top: 30px;">
    {images.map(image => (
      <img src={image.src} alt={image.alt} data-aos="zoom-in" style="width: 100%; border-radius: 10px;" />
    ))}
  </div>
</section>
